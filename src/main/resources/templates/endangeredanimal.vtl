<h1> $animal.getName() : $animal.getHealth() : $animal.getAge() <h1>

<div class="row">
  <div class="col-md-9">
    <form action="/endangeredanimal/$animal.getId()/update" method="post">
      <label for="name"> Endangered Animal </label>
      <input id="name" name="name" type="text">
      <label for="health"> health </label>
        <select name="health">
          <option value="healthy">healthy</option>
          <option value="decent">decent</option>
          <option value="sick">sick</option>
        </select>
      <label for="age"> age </label>
        <select name="age">
          <option value="newborn">newborn</option>
          <option value="young">young</option>
          <option value="adult">adult</option>
        </select>
      <button type="submit" class="btn btn-info"> Update Endangered Animal info </button>
    </form>
  </div>

  <div class="col-md-3">
    <form action="/endangeredanimal/$animal.getId()/delete" method="post">
      <button type="submit" class="btn btn-danger"> Delete Animal </button>
    </form>
  </div>
</div>

<form action="/endangeredanimal/$animal.getId()" method="post">
  <label for="location"> Location </label>
  <input id="location" name="location" name="text">
  <br>
  <label for="name"> Ranger Name </label>
  <input id="name" name="name" name="text">

  <button type="submit" class="btn btn-success"> Add sighting </button>
</form>

<h1> Total sightings! </h1>
#foreach ($sighting in $sightings)
  <a href="/sighting/$sighting.getId()">
    <h2> Location: $sighting.getLocation() </h2>
    <h2> Ranger: $sighting.getRangerName() </h2>
    <h2> Time: $sighting.getSightTime() </h2>
  </a>
#end

<a href ="/"> Back to home </a>
